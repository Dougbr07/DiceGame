<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.douglas.dicegame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/diceicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".diceDuel" />
        <activity android:name=".RandomDice" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".CrapsActivity" />
        <activity android:name=".CrapsSecondActivity"></activity>
    </application>

</manifest>
