<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>

    </style>

    <style name="ButtonTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#ec0e16</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>


</resources>
